{% extends 'base.html.twig' %}
{% block body %}
    <style type="text/css">
        .dot {
          height: 25px;
          width: 25px;
          background-color: #c7a527;
          color: #fff;
          font-weight: bold;
          border-radius: 50%;
          display: inline-block;
          text-align: center;
        }
    </style>

    <div class="messaging">
        <div class="inbox_msg">
            <div class="inbox_people">
                <div class="inbox_chat">
                    <div class="chat_list active_chat">
                        <div class="chat_people">
                          <div class="chat_img"> <img src="{{ asset('template/img/a2.jpg') }}" alt="sunil"> </div>
                          <div class="chat_ib">
                            <h5> 
                                {{ chatBot.botname }} <span class="chat_date"> {{ chatBot.createdAt|date('d/m/Y') }} </span>
                            </h5>
                            <p>{{ chatBot.description }}</p>
                          </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mesgs" style="padding-top: 10px;">
                <h3 style="border-bottom: solid 1px silver;">  Configuration de la question N&deg; {{question.order }}  </h3>
                <br/>
                <div class="msg_history" id="chatbox">
    
                    {{ form_start(edit_form) }}
                        {{ form_widget(edit_form) }}
                        <div class="col-md-12">
                        <button type="submit" class="btn btn-warning"> Enregistrer les modifications </button>                     
                    </div>
                    {{ form_end(edit_form) }}
                    <div class="col-md-12">
                        {{ form_start(delete_form) }}
                        <button type="submit" class="btn btn-danger"> Supprimer cette question </button>
                        {{ form_end(delete_form) }}
                    </div>

                    <div class="col-md-12">
                        <a class="btn btn-info" href="{{ path('botmanager_show', {'id':chatBot.id}) }}"> Terminer la configuration de la question N&deg; {{question.order }}  </a>
                    </div>

                </div>
                
            </div>
        </div>
        
        <p class="text-center top_spac"> Design by <a target="_blank" href="#">Sunil Rajput</a></p>
        
    </div>
{% endblock %}


